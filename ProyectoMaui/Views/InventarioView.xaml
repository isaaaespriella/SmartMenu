<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ProyectoMaui.Views"
             x:Class="ProyectoMaui.Views.InventarioView"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <views:EncabezadoView />

            <Frame BackgroundColor="#6200EE"
                   CornerRadius="12"
                   Padding="20"
                   HasShadow="True">
                <Label Text="Inventario de Insumos"
                       FontSize="26"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
            </Frame>

            <CollectionView ItemsSource="{Binding Inventario}" SelectionChanged="OnItemSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem Text="Editar"
                                               BackgroundColor="#FF9800"
                                               Invoked="OnEditarInvoked" />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem Text="Eliminar"
                                               BackgroundColor="#F44336"
                                               Invoked="OnEliminarInvoked" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame BackgroundColor="White"
                                   BorderColor="#E0E0E0"
                                   CornerRadius="16"
                                   Padding="15"
                                   Margin="0,5"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="*, Auto"
                                      RowDefinitions="Auto, Auto, Auto"
                                      ColumnSpacing="10">
                                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="{Binding Ingrediente}"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#333" />
                                        <Label Text="{Binding Stock, StringFormat='Stock: {0}'}"
                                               FontSize="14"
                                               TextColor="#555" />
                                        <Label Text="{Binding Id, StringFormat='ID: {0}'}"
                                               FontSize="12"
                                               TextColor="#888" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Agregar Insumo"
                    Clicked="OnAgregarInsumo"
                    BackgroundColor="#03DAC5"
                    TextColor="Black"
                    FontAttributes="Bold"
                    CornerRadius="24"
                    HeightRequest="50"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
